<resources>

    <!-- Основная тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Цвет фона для всего приложения -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerTheme</item>
    </style>

    <style name="CustomDatePickerTheme">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="DarkAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">#121212</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#BDBDBD</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DarkDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DarkDialogButton</item>
    </style>

    <style name="DarkDialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
